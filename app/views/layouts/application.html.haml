%html
%head
	%title Blog
	= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
	= javascript_include_tag 'application', 'data-turbolinks-track' => true
	= csrf_meta_tags

%body.site-wrapper
	
	.navbar.navbar-inverse.navbar
		.container
			.navbar-header
				= link_to "All Posts" , root_path, class: "navbar-brand"
		
			.navbar-right
				- if user_signed_in?
					= link_to "New Post", new_post_path, class: "btn btn-success"
					= link_to "Sign Out", destroy_user_session_path , method: :delete, class: "btn btn-default"
				- else
					= link_to "Sign In", new_user_session_path, class: "btn btn-default"
					= link_to "Sign Up", new_user_registration_path, class: "btn btn-default"
					
	.container
		%p.notice= notice
		%p.alert= alert
		= yield

	.footer
		%hr
		.container
